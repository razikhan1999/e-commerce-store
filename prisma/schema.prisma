model Category {
  id    Int    @id @default(autoincrement())
  name String
  products Product[]

  @@map("categories")
}

model Product {
  id    Int     @id @default(autoincrement())
  name String  
  price  String?
  image   String
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  @@map("products")
}